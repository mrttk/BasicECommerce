@using BasicECommerce.Entity;
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}

<div class="row">
    <div class="col-md-3 mt-5 ">
        <div class="container mb-5">
            @Html.Action("GetCategories", "Home")
        </div>
    </div>
    <div class="col-md-9">
        <div class="container mb-5">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning mt-5">Product not found in this category!</div>
            }
            else
            {
                <div class="alert alert-success mt-5">@Model.Count() Products listed!</div>
            }
            <div class="row row-cols-1 row-cols-md-3 g-4 pt-2">
                @Html.Partial("_ProductList", Model)
            </div>
        </div>
    </div>
</div>

